#include <iostream>
using namespace std;

class Node {
    public :
    int data;
    Node* next;

    Node(int value){ data=value; next=NULL; }
};

class LinkedList {
public:
    Node* start;
    LinkedList(){start = NULL;}

    // Insert at the front
    void push_front(int value) {
        Node *newNode = new Node(value);
        
        if(start == NULL){
            start = newNode;
        }
        else{
            newNode->next=start;
            start = newNode;
        }
    }
    
    // Insert at end
      void push_back(int value) {
        Node *newNode = new Node(value);
        
        if(start == NULL){
            start = newNode;
        }
        else{
            Node *temp;
            temp=start;
           while(temp->next != NULL){
               temp = temp->next;
           }
           temp->next = newNode;
        }
    }
    
    void printList(){
        Node *temp;
        temp = start;
        
        while(temp != NULL){
            cout<<temp->data<<" --> ";
            temp = temp->next;
        }
        cout<<"NULL"<<endl;
    }

};
int main()
{
    LinkedList ob;
    ob.printList();
    cout<<"on enterring"<<endl;
    ob.push_front(10);
    ob.push_front(20);
    ob.printList();
    cout<<"on enterring again and again"<<endl;
    ob.push_front(50);
    ob.printList();
    cout<<"on enterring again from back"<<endl;
    ob.push_back(100);
    ob.printList();
    return 0;
}
