#include <iostream>
using namespace std;

class saving_account{
    string name;
    int id;
    int balance;
    public :
      void debit(){
        int debit;
        cout<<"Enter the amount to debit"<<endl;
        cin>>debit;
        balance=balance-debit;
    }
     void credit(){
        int credit;
        cout<<"Enter the amount to credit"<<endl;
        cin>>credit;
        balance=balance+credit;
    }
    void get_data(){
        cout<<"Enter the name"<<endl;
        getline(cin,name);
        cout<<"Enter the id"<<endl;
        cin>>id;
        cout<<"Enter the balance"<<endl;
        cin>>balance;
        cout<<"choose credit or debit"<<endl;
    }
    void show_data(){
        cout<<"Student name is " <<name<<endl;
        cout<<"Student id is " <<id<<endl;
        cout<<"Student balance is " <<balance<<endl;
    }
};
int main()
{
    char choice;
    saving_account st;
    st.get_data();
    cin>>choice;
    if(choice=='d'){ st.debit();}
    else if (choice=='c'){ st.credit();}
    st.show_data();

    return 0;
}
