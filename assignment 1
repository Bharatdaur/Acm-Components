#include <iostream>
using namespace std;

class student{
    string name;
    int year;
    int roll_no;
    public :
    void get_data(){
        cout<<"Enter the name"<<endl;
        getline(cin,name);
        cout<<"Enter the roll no"<<endl;
        cin>>roll_no;
        cout<<"Enter the year"<<endl;
        cin>>year;
    }
    void show_data(){
        cout<<"Student name is " <<name<<endl;
        cout<<"Student roll_no is " <<roll_no<<endl;
        cout<<"Student year is " <<year<<endl;
    }
};
int main()
{
    student st;
    st.get_data();
    st.show_data();

    return 0;
}
